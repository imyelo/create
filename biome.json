{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "extends": ["@yelo/biome-config"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.json",
      "**/*.md",
      "!packages/@yelo/template-*/template/**/*",
      "!packages/@yelo/template-*/test/snapshots/**/*"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "useEditorconfig": true
  }
}
